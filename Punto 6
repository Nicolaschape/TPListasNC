// Programación de Dispositivos Electrónicos
// Algoritmos - Procesamiento datos - Listas
// grupo chapeton quintana sfrazzetta
// ejecicio 6, hecho por chapeton 
#define N 10
int lista[N];

void intercambiar(int *pLista, int tam, int M, int Q) {
 
  if (M < 0 || M >= tam || Q < 0 || Q >= tam) {
    Serial.println("error: posicion fuera de rango.");
    return;
  }

  int aux = pLista[M];
  pLista[M] = pLista[Q];
  pLista[Q] = aux;

  Serial.print("Valores intercambiados entre posiciones ");
  Serial.print(M);
  Serial.print(" y ");
  Serial.println(Q);
}

void mostrarLista(int *pLista, int tam) {
  Serial.println("\nContenido de la lista:");
  for (int i = 0; i < tam; i++) {
    Serial.print("Posicion ");
    Serial.print(i);
    Serial.print(": ");
    Serial.println(pLista[i]);
  }
}

void setup() {
  Serial.begin(9600);

  for (int i = 0; i < N; i++) {
    lista[i] = i + 1; 
  }

  Serial.println("Lista original:");
  mostrarLista(lista, N);

  int M = 2;  
  int Q = 7;  

  intercambiar(lista, N, M, Q);

  Serial.println("\nLista despues del intercambio:");
  mostrarLista(lista, N);
}

void loop() {}
